<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @invitation.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @invitation.last_name %>
</p>

<% if @invitation.accepted? %>
  <p>
    <strong>DJ Name:</strong>
    <%= @invitation.dj_name %>
  </p>
<% end %>

<p>
  <strong>Email:</strong>
  <%= @invitation.email %>
</p>

<p>
  <strong>Status:</strong>
  <%= @invitation.status.humanize %>
</p>

<h3>Song Requests</h3>

<% if @invitation.persisted? && (@invitation.accepted? || logged_in_as_admin?) %>
  <%= render 'song_requests/list', :song_requests => @invitation.song_requests, :editable => true %>
  <%= render 'song_requests/form', :song_request => @song_request %>
<% end %>

<%= link_to 'Edit', edit_invitation_path(@invitation) %>
