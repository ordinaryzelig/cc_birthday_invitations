<h2><%= status.titleize %></h2>

<table class="table-sm">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.first_name %></td>
        <td><%= invitation.last_name %></td>
        <td><%= link_to invitation.email, "mailto:#{invitation.email}" if invitation.email %></td>
        <td><%= invitation.code %></td>
        <td><%= link_to 'Show', invitation %></td>
        <td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
        <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
